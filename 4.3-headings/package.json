{
  "name": "codely-monorepo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^14.0.0",
    "yarn": "^2.0.0"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start": "yarn workspace @codely/mooc-app start",
    "dev": "yarn workspace @codely/mooc-app dev",
    "build": "yarn workspace @codely/mooc-app build",
    "design-system:dev": "yarn workspace @codely/design-system dev",
    "design-system:build": "yarn workspace @codely/design-system build",
    "mooc:test:unit-integration": "yarn workspace @codely/mooc-app test:unit-integration",
    "design-system:test": "yarn workspace @codely/design-system test",
    "lint": "eslint --ignore-path .gitignore . && stylelint '**/*.scss'",
    "lint:fix": "eslint --fix --ignore-path .gitignore . && stylelint --fix '**/*.scss'"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.13.0",
    "@faker-js/faker": "^6.0.0",
    "@storybook/testing-react": "^1.2.3",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/convict": "^6.1.1",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.1.1",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "diod": "^1.0.2",
    "eslint": "^7.32.0",
    "eslint-plugin-folders": "^1.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.4",
    "fishery": "^2.2.2",
    "husky": "^7.0.4",
    "jest": "^27.2.1",
    "jest-junit": "^12.3.0",
    "postcss": "^8.4.5",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.4.1",
    "prettier-eslint": "^13.0.0",
    "reflect-metadata": "^0.1.13",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "4.4.3",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "convict": "^6.2.2",
    "cross-env": "^7.0.3"
  },
  "browser": {
    "convict": false
  }
}
